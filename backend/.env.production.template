# Backend Production Environment Variables for AWS Amplify
# Copy this to .env.production and fill in the values

NODE_ENV=production
PORT=3001

# Database - Replace with your Supabase connection details
DATABASE_URL=postgresql://postgres:[YOUR_SUPABASE_PASSWORD]@[YOUR_SUPABASE_HOST]:5432/postgres

# Security - Generate secure 32-character secrets
JWT_SECRET=[GENERATE_32_CHAR_SECRET_KEY]
ENCRYPTION_KEY=[GENERATE_32_CHAR_ENCRYPTION_KEY]

# CORS - Will be updated with actual Amplify domain
FRONTEND_URL=https://[YOUR_AMPLIFY_DOMAIN].amplifyapp.com

